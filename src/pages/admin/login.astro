---
import Layout from "../../layouts/Layout.astro";
import LoginForm from "../../components/admin/LoginForm";
---

<Layout>
    <div class="login-page min-h-screen flex items-center justify-center relative overflow-hidden bg-arroz">
        <!-- Rama decorativa izquierda -->
        <svg 
            class="absolute top-0 left-0 w-48 md:w-64 h-auto opacity-30 pointer-events-none"
            viewBox="0 0 300 400" 
            fill="none"
        >
            <path 
                d="M-20 0 Q 60 80, 80 150 Q 100 220, 140 280 Q 160 320, 200 380" 
                stroke="#8B5A5B" 
                stroke-width="8" 
                stroke-linecap="round"
                fill="none"
            />
            <path 
                d="M60 100 Q 90 130, 120 140" 
                stroke="#8B5A5B" 
                stroke-width="4" 
                stroke-linecap="round"
                fill="none"
            />
            <circle cx="120" cy="135" r="12" fill="#FFB7C5" opacity="0.9"/>
            <circle cx="120" cy="135" r="6" fill="#FFDDE5"/>
            <circle cx="80" cy="155" r="8" fill="#FFB7C5" opacity="0.8"/>
            <circle cx="80" cy="155" r="4" fill="#FFDDE5"/>
        </svg>

        <!-- Rama decorativa derecha -->
        <div class="absolute top-0 right-0 w-40 md:w-56 pointer-events-none opacity-30" style="transform: scaleX(-1);">
            <svg 
                class="w-full h-auto"
                viewBox="0 0 300 400" 
                fill="none"
            >
                <path 
                    d="M-20 0 Q 60 80, 80 150 Q 100 220, 140 280" 
                    stroke="#8B5A5B" 
                    stroke-width="8" 
                    stroke-linecap="round"
                    fill="none"
                />
                <path 
                    d="M60 100 Q 90 130, 120 140" 
                    stroke="#8B5A5B" 
                    stroke-width="4" 
                    stroke-linecap="round"
                    fill="none"
                />
                <circle cx="120" cy="135" r="10" fill="#FFB7C5" opacity="0.85"/>
                <circle cx="120" cy="135" r="5" fill="#FFDDE5"/>
            </svg>
        </div>
        
        <!-- Contenido principal -->
        <div class="relative z-10 w-full max-w-md px-4">
            <LoginForm client:load />
        </div>
        
        <!-- Footer sutil -->
        <div class="absolute bottom-6 left-0 right-0 text-center">
            <p class="text-gris/60 text-sm font-inter">
                Â© 2026 AION DEVS
            </p>
        </div>
    </div>
</Layout>

<style>
    .login-page {
        min-height: 100dvh;
    }
</style>
