---
interface Props {
    name_es: string;
    name_zh: string;
    price: number;
    image_url?: string;
    is_available: boolean;
    category: string;
}

const { name_es, name_zh, price, image_url, is_available } = Astro.props;
---

<div
    class={`card card-side bg-base-100 shadow-xl mb-4 transition-all duration-300 hover:scale-[1.02] ${!is_available ? "opacity-60 grayscale" : ""}`}
>
    <figure class="w-1/3 max-w-[120px]">
        <img
            src={image_url ||
                `https://ui-avatars.com/api/?name=${name_es}&background=random`}
            alt={name_es}
            class="h-full w-full object-cover"
            loading="lazy"
        />
    </figure>
    <div class="card-body p-4 w-2/3 justify-between">
        <div>
            <div class="flex justify-between items-start">
                <h2
                    class="card-title text-lg font-bold leading-tight text-primary"
                >
                    {name_es}
                </h2>
                {
                    !is_available && (
                        <span class="badge badge-error badge-xs">Agotado</span>
                    )
                }
            </div>
            <p class="text-xl text-neutral-content/50 font-serif mt-1">
                {name_zh}
            </p>
        </div>
        <div class="card-actions justify-end items-end">
            <div class="text-xl font-bold">
                ${price.toLocaleString("es-CL")}
            </div>
        </div>
    </div>
</div>
