>
    <div class="navbar min-h-12 overflow-x-auto">
        <div class="flex-none">
            <ul class="menu menu-horizontal px-1 gap-2">
                {
                    categories.map((cat) => (
                        <li>
                            <a
                                href={`#${cat}`}
                                class="font-medium text-sm whitespace-nowrap scroll-smooth"
                            >
                                {cat}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</div>

