---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import FloatingLoyaltyButton from "../components/public/FloatingLoyaltyButton.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Mini wok | Restaurante</title>

		<!-- Google Fonts: Zen Moderno Typography -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Noto+Serif+SC:wght@400;500&family=Noto+Serif+JP:wght@400;500&family=Inter:wght@300;400;500;600&display=swap"
			rel="stylesheet"
		/>

		<!-- View Transitions para mantener el scroll al navegar -->
		<ViewTransitions />
	</head>
	<body>
		<slot />
		<FloatingLoyaltyButton />
		
